{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "version": "1.0",
  "default_locale": "en",
  "description": "This extension will return the weighted reports of a user profile based on data from <tbd>",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "activeTab",
    "declarativeContent"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  }
}